<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="16dp"
    app:cardCornerRadius="8dp"
    android:id="@+id/card_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="start"
                android:textStyle="bold"
                android:fontFamily="@font/noto_sans_regular"
                android:layout_marginStart="0dp"
                android:text="Transaction Confirmation?"
                android:textColor="@color/black" />

            <ImageButton
                android:id="@+id/btn_cancel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_cross_close2"
                app:tint="@color/red" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="@font/noto_sans_regular"
                android:text="Aadhar Number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text=" : " />

            <TextView
                android:id="@+id/tv_aadharNumber"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="@font/noto_sans_regular"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="504245232432" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_numberTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="@font/noto_sans_regular"
                android:textStyle="bold"
                android:text="Transaction Type" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text=" : " />

            <TextView
                android:id="@+id/tv_transaction_type"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="@font/noto_sans_regular"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="Balance Enquiry" />

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/noto_sans_regular"
                android:textColor="@color/primaryTextColor"
                android:text="Bank Name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text=" : " />

            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="@font/noto_sans_regular"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="Unknown bank" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_amount_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/noto_sans_regular"
                android:textColor="@color/primaryTextColor"
                android:textStyle="bold"
                android:text="Amount" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text=" : " />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="@font/noto_sans_regular"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="00.0" />

        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm"
            style="@style/ButtonPrimary"
            android:text="Proceed"
            android:textColor="@color/white"
            android:backgroundTint="@color/button_bg"
            android:background="@drawable/rounded_background"
            android:layout_marginTop="16dp"/>


    </LinearLayout>


</androidx.cardview.widget.CardView>