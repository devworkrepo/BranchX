<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    android:background="@drawable/rounded_background"
    android:backgroundTint="@color/grey_bg"
    android:id="@+id/card_view">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transaction Details"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/noto_sans_regular"
            android:textColor="@color/primaryTextColor"
            android:textStyle="bold"
            android:layout_margin="0dp"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_transaction_status"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            app:lottie_autoPlay="true"
            app:lottie_fileName="lottie_pending.json"
            app:lottie_loop="true"
            app:lottie_progress="0.8"
            app:lottie_renderMode="software"
            app:lottie_repeatCount="150"
            app:lottie_repeatMode="restart"
            app:lottie_speed="0.8" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:textSize="14sp"
                    android:fontFamily="@font/noto_sans_regular"
                    android:textColor="@color/primaryTextColor"
                    android:layout_height="wrap_content"
                    android:text="Message"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  :  "/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="NA"
                    android:fontFamily="@font/noto_sans_regular"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="14sp"
                    android:id="@+id/tv_message"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_regular"
                    android:textColor="@color/primaryTextColor"
                    android:text="Trasanction Amount"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  :  "/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="NA"
                    android:fontFamily="@font/noto_sans_regular"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="14sp"
                    android:id="@+id/tv_transaction_amount"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:textSize="14sp"
                    android:fontFamily="@font/noto_sans_regular"
                    android:textColor="@color/primaryTextColor"
                    android:layout_height="wrap_content"
                    android:text="Balance Amount"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  :  "/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:text="NA"
                    android:fontFamily="@font/noto_sans_regular"
                    android:textColor="@color/primaryTextColor"
                    android:id="@+id/tv_balance_amount"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:textSize="14sp"
                    android:fontFamily="@font/noto_sans_regular"
                    android:textColor="@color/primaryTextColor"
                    android:layout_height="wrap_content"
                    android:text="Bank Name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  :  "/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="NA"
                    android:fontFamily="@font/noto_sans_regular"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="14sp"
                    android:id="@+id/tv_bank_name"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:textSize="14sp"
                    android:fontFamily="@font/noto_sans_regular"
                    android:textColor="@color/primaryTextColor"
                    android:layout_height="wrap_content"
                    android:text="Bank Rnn"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  :  "/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="NA"
                    android:fontFamily="@font/noto_sans_regular"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="14sp"
                    android:id="@+id/tv_bank_rrn"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:textSize="14sp"
                    android:fontFamily="@font/noto_sans_regular"
                    android:textColor="@color/primaryTextColor"
                    android:layout_height="wrap_content"
                    android:text="Card Number"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  :  "/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="NA"
                    android:textSize="14sp"
                    android:fontFamily="@font/noto_sans_regular"
                    android:textColor="@color/primaryTextColor"
                    android:id="@+id/tv_card_number"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:textSize="14sp"
                    android:fontFamily="@font/noto_sans_regular"
                    android:textColor="@color/primaryTextColor"
                    android:layout_height="wrap_content"
                    android:text="Transaction Type"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  :  "/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="NA"
                    android:textSize="14sp"
                    android:fontFamily="@font/noto_sans_regular"
                    android:textColor="@color/primaryTextColor"
                    android:id="@+id/tv_trans_type"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:textSize="14sp"
                    android:fontFamily="@font/noto_sans_regular"
                    android:textColor="@color/primaryTextColor"
                    android:layout_height="wrap_content"
                    android:text="Transaction Status"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  :  "/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="NA"
                    android:fontFamily="@font/noto_sans_regular"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="14sp"
                    android:id="@+id/tv_transaction_status"/>


            </LinearLayout>

            <Button
                style="@style/ButtonPrimary"
                android:layout_marginTop="16dp"
                android:id="@+id/btn_ok"
                android:text="OK"
                android:textColor="@color/white"
                android:background="@drawable/rounded_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_gravity="center"
                android:paddingRight="70dp"
                android:paddingLeft="70dp"/>

        </LinearLayout>



    </LinearLayout>



</androidx.cardview.widget.CardView>
