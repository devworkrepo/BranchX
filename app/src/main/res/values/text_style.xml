<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="ValidationErrorStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:text">Validation Error</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/aldrich</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/validation_error</item>
    </style>

    <style name="DashboardTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start</item>
        <item name="android:text">Service</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/purple_700</item>
    </style>

    <style name="DashBoardItemTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewInputHeader" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>

    </style>

    <style name="TextTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
    </style>




    <style name="TextDescription" parent="TextTitle">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black30</item>
    </style>




    <style name="TitleTextStyle" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="ReportListStyleLeft" parent="android:Widget.TextView">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ReportListStyleRight" parent="android:Widget.TextView">
        <item name="android:layout_weight">1.5</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="ReportListStyleCenterDot" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">\u0020 \u0020: \u0020 \u0020</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TransactionSummaryStyle" parent="android:Widget.TextView">
        <item name="android:layout_weight">1.5</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">12sp</item>

    </style>





</resources>